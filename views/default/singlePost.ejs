<%- include('../partials/blogHeader') %>

    <main class="main pt-4">

        <div class="container">

            <div class="row">
                <div class="col-md-9">
                    <article class="card mb-4 border-0">
                        <header class="card-header text-center bg-white">
                            <div class="card-meta">
                                <a href="#"><time class="timeago" datetime="2019-10-26 20:00"> <%= moment(post.creationDate).format('Do MMMM, YYYY'); %> </p></time></a>
                            </div>
                            <a href="post-image.html">
                                <h1 class="card-title">
                                    <%= post.title %>
                                </h1>
                            </a>
                        </header>
                        <a href="post-image.html">
                            <img class="card-img" src="<%= post.image %>" alt="" />
                        </a>
                        <div class=" d-flex justisfy-content-between mt-2 mb-2">
                            <p>Username</p> <span class="ml-auto"> icons here</span>
                        </div>
                        <div class="card-body">

                            <p>
                                <%= post.description %>
                            </p>

                            <hr />
                            <a href="/posts/<%= post._id %>/comments/new" class="float-right btn btn-primary bg-lg"> Add Comment</a>
                            <h3>
                                <% post.comments.length %> comments</h3>
                            <% post.comments.forEach( comment => { %>
                                <div class="media jumbotron mb-3">
                                    <div class="text-center">
                                        <h6 class="mt-1 mb-0 mr-3">
                                            <%= comment.author.username %>
                                        </h6>
                                    </div>
                                    <div class="media-body">
                                        <p class="mt-3 mb-2">
                                            <%= comment.comment_body %>
                                        </p>
                                        <time class="timeago text-muted" datetime="2019-12-03 20:00"><%= moment(comment.creationDate).format(); %> </time>
                                    </div>
                                    <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                        <form style="display: inline" class="pull-right" id="delete-form" action="/posts/<%=post._id %>/comments/<%=comment._id %>?newMethod=DELETE" method="POST">
                                            <a class="btn btn-xs btn-warning" href="/posts/<%=post._id %>/comments/<%=comment._id %>/edit">Edit</a>
                                            <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                        </form>
                                        <% } %>
                                </div>
                                <% }) %>

                        </div>
                    </article>
                    <!-- /.card -->

                </div>
                <div class="col-md-3 ml-auto ">

                    <aside class="sidebar ">
                        <div class="card mb-4 border-0 ">
                            <div class="card-body ">
                                <h4 class="card-title ">About</h4>
                                <p class="card-text text-center>"> Best place to voice out, your inner voice. </p>
                            </div>
                            <hr>
                        </div>
                        <!-- /.card -->
                    </aside>

                    <aside class="sidebar sidebar-sticky ">
                        <div class="card mb-4 border-0 ">
                            <div class="card-body justisfy-content-center ">
                                <h4 class="card-title ">Tags</h4>
                                <% categories.forEach( cat => { %>
                                    <a class="btn btn-light btn-sm mb-1 " href="page-category.html ">
                                        <%= cat.title %>
                                    </a>
                                    <% }) %>
                            </div>
                            <hr>
                        </div>
                        <!-- /.card -->
                        <div class="card mb-4 border-0 ">
                            <div class="card-body ">
                                <h4 class="card-title ">Popular stories</h4>

                                <a href="post-image.html " class="d-inline-block ">
                                    <h4 class="h6 ">The blind man</h4>
                                    <img class="card-img " src="/dist/images/7.jpg " alt=" " />
                                </a>
                                <time class="timeago " datetime="2019-10-03 20:00 ">3 october 2019</time> in Lifestyle

                                <a href="post-image.html " class="d-inline-block mt-3 ">
                                    <h4 class="h6 ">Crying on the news</h4>
                                    <img class="card-img " src="/dist/images/7.jpg " alt=" " />
                                </a>
                                <time class="timeago " datetime="2019-07-16 20:00 ">16 july 2019</time> in Work

                            </div>
                            <hr>
                        </div>
                        <!-- /.card -->
                    </aside>

                </div>
            </div>
        </div>

    </main>

    <%- include('../partials/blogFooter') %>