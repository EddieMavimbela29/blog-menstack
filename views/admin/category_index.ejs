<%- include('../partials/adminHeader') %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">

        <div class="container">


            <h3 class="alert alert-dark p-3 text-dark text-center">All Categories </h3>


            <div class="row">
                <div class="col-6 mx-auto">
                    <table class="table table-bordered text-center border-success text-white">
                        <thead class="bg-primary">
                            <tr>
                                <th>Title</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="table-hover bg-dark category-list">

                            <% categories.forEach(cat => { %>
                                <tr>
                                    <td>
                                        <%= cat.title %>
                                    </td>
                                    <td class="d-flex justify-content-center">
                                        <a href="/admin/<%= user._id %>/categories/<%= cat._id %>/posts/new" class="btn btn-sm btn-primary mr-2" role="button">Add category post</a>
                                        <a href="/admin/<%= user._id %>/categories/edit/<%= cat._id %>" class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                                        <form action="/admin/<%= user._id %>/categories/<%= cat._id %>?newMethod=DELETE" method="POST">
                                            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <hr>

            <div class="row p-4">
                <div class="col-md-8">
                    <form action="/admin/<%= user._id %>/categories" method="post">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="category-title" name="title" placeholder="Enter Title">
                        </div>
                        <button class="btn btn-outline-success btn-lg" id="create-category-button">Create Category</button>
                    </form>
                </div>
            </div>


        </div>

    </main>

    <%- include('../partials/adminFooter') %>