<%- include('../partials/adminHeader') %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">

        <div class="container">


            <h3 class="alert alert-dark p-3 text-dark text-center">All Categories </h3>


            <div class="row">
                <div class="col-6 mx-auto">
                    <table class="table table-bordered text-center border-success text-white">
                        <thead class="bg-primary">
                            <tr>
                                <th>Title</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="table-hover bg-dark category-list">
                            <tr>
                                <td>
                                    <%= category.title %>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                </div>
            </div>

            <hr>

            <div class="row p-4">
                <div class="col-md-8">
                    <form action="/admin/<%= user._id %>/categories/<%= category._id %>?newMethod=PUT " method="POST">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="category-title" name="category[title]" value="<%= category.title %>">
                            <input type="hidden" class="form-control" id="category-id" name="id" value="<%= category._id %>">
                        </div>
                        <button class="btn btn-outline-warning btn-lg" id="update-category-button">Update Category</button>
                </div>
                </form>
            </div>


        </div>

    </main>
    <%- include('../partials/adminFooter') %>